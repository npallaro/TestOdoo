<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Estensione della vista form delle fatture fornitore -->
    <record id="view_move_form_sdi_rounding" model="ir.ui.view">
        <field name="name">account.move.form.sdi.rounding</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            
            <!-- Aggiungi i pulsanti nella header bar -->
            <xpath expr="//header" position="inside">
                <button name="action_add_sdi_rounding_line"
                        string="Aggiungi Arrotondamento SDI"
                        type="object"
                        class="btn-primary"
                        invisible="move_type not in ('in_invoice', 'in_refund') or state != 'draft' or has_rounding_line"
                        help="Estrae automaticamente il totale dal file XML e aggiunge una riga di arrotondamento"/>
                
                <button name="action_remove_sdi_rounding_lines"
                        string="Rimuovi Arrotondamento SDI"
                        type="object"
                        class="btn-secondary"
                        invisible="move_type not in ('in_invoice', 'in_refund') or state != 'draft' or not has_rounding_line"
                        help="Rimuove le righe di arrotondamento SDI dalla fattura"/>
            </xpath>
            
            <!-- Aggiungi i campi nel tab "Altre Informazioni" -->
            <xpath expr="//notebook/page[@name='other_info']" position="inside">
                <group name="sdi_rounding_info" string="Informazioni SDI" 
                       invisible="move_type not in ('in_invoice', 'in_refund')">
                    <group>
                        <field name="sdi_xml_total" 
                               widget="monetary"
                               options="{'currency_field': 'currency_id'}"
                               help="Totale estratto automaticamente dal file XML. PuÃ² essere modificato manualmente se necessario."/>
                        <field name="sdi_rounding_difference" 
                               widget="monetary"
                               options="{'currency_field': 'currency_id'}"
                               readonly="1"
                               decoration-danger="sdi_rounding_difference > 0.01 or sdi_rounding_difference &lt; -0.01"
                               decoration-success="sdi_rounding_difference &lt;= 0.01 and sdi_rounding_difference >= -0.01"
                               help="Differenza tra il totale XML e il totale calcolato da Odoo"/>
                        <field name="has_rounding_line" invisible="1"/>
                    </group>
                </group>
            </xpath>
            
        </field>
    </record>

</odoo>

