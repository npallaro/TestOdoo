<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form view estesa per sale.order -->
    <record id="view_order_form_inherit_agent" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.agent</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Campo nascosto per is_agent_order -->
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="is_agent_order" invisible="1"/>
                <field name="created_by_agent_id" readonly="1" invisible="not is_agent_order"/>
            </xpath>

            <!-- Aggiungi stato operativo in header -->
            <xpath expr="//header" position="inside">
                <field name="agent_order_status" widget="statusbar"
                       options="{'clickable': '1'}"
                       statusbar_visible="quotation,agent_incoming,in_production,ready_warehouse,ready_pickup,ready_delivery,completed"/>
            </xpath>

            <!-- Aggiungi campi agente sotto il metodo di pagamento -->
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="warehouse_id" required="is_agent_order"/>
                <field name="commitment_date" required="is_agent_order"/>
                <field name="agent_transport_method" required="is_agent_order"/>
                <field name="agent_status_date" readonly="1"/>
            </xpath>

            <!-- Rendi il campo partner_shipping_id richiesto per ordini agente -->
            <xpath expr="//field[@name='partner_shipping_id']" position="attributes">
                <attribute name="required">is_agent_order</attribute>
            </xpath>
        </field>
    </record>

    <!-- Tree view estesa per sale.order -->
    <record id="view_order_tree_inherit_agent" model="ir.ui.view">
        <field name="name">sale.order.tree.inherit.agent</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="created_by_agent_id" optional="hide"/>
                <field name="agent_order_status" optional="show" widget="badge"
                       decoration-info="agent_order_status == 'quotation'"
                       decoration-warning="agent_order_status == 'agent_incoming'"
                       decoration-primary="agent_order_status in ['in_production', 'ready_warehouse']"
                       decoration-success="agent_order_status in ['ready_pickup', 'ready_delivery']"
                       decoration-muted="agent_order_status == 'completed'"
                       decoration-danger="agent_order_status in ['waiting_info', 'supplier_order']"/>
            </xpath>
        </field>
    </record>

    <!-- Aggiungi filtro per ordini creati da agenti -->
    <record id="view_sales_order_filter_inherit_agent" model="ir.ui.view">
        <field name="name">sale.order.search.inherit.agent</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='my_sale_orders_filter']" position="after">
                <separator/>
                <filter string="Ordini da Agenti" name="agent_orders" domain="[('is_agent_order', '=', True)]"/>
                <filter string="Ordini Diretti" name="direct_orders" domain="[('is_agent_order', '=', False)]"/>
                <separator/>
                <filter string="Preventivi" name="filter_quotation" domain="[('agent_order_status', '=', 'quotation')]"/>
                <filter string="In Entrata da Agente" name="filter_agent_incoming" domain="[('agent_order_status', '=', 'agent_incoming')]"/>
                <filter string="In Produzione" name="filter_in_production" domain="[('agent_order_status', '=', 'in_production')]"/>
                <filter string="Da Inserire in Baia" name="filter_ready_warehouse" domain="[('agent_order_status', '=', 'ready_warehouse')]"/>
                <filter string="Pronto in Baia" name="filter_ready_pickup" domain="[('agent_order_status', '=', 'ready_pickup')]"/>
                <filter string="Pronto Consegna NOI" name="filter_ready_delivery" domain="[('agent_order_status', '=', 'ready_delivery')]"/>
                <filter string="Completati" name="filter_completed" domain="[('agent_order_status', '=', 'completed')]"/>
                <filter string="In Attesa Info" name="filter_waiting_info" domain="[('agent_order_status', '=', 'waiting_info')]"/>
                <filter string="In Ordine Fornitore" name="filter_supplier_order" domain="[('agent_order_status', '=', 'supplier_order')]"/>
            </xpath>
            <xpath expr="//group" position="inside">
                <filter string="Agente Creatore" name="group_by_agent" context="{'group_by': 'created_by_agent_id'}"/>
                <filter string="Stato Operativo" name="group_by_agent_status" context="{'group_by': 'agent_order_status'}"/>
            </xpath>
        </field>
    </record>

</odoo>
