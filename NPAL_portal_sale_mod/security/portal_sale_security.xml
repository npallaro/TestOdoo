<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Regola di sicurezza per i partner: gli agenti vedono solo i loro clienti -->
        <record id="portal_agent_customer_rule" model="ir.rule">
            <field name="name">Portal Agent: See Only Assigned Customers</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[
                '|',
                    ('id', '=', user.partner_id.id),
                    ('user_id', '=', user.id)
            ]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Regola di sicurezza per gli ordini: gli agenti vedono gli ordini dei loro clienti -->
        <record id="portal_agent_order_rule" model="ir.rule">
            <field name="name">Portal Agent: See Customer Orders</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="domain_force">[
                '|',
                    ('partner_id.user_id', '=', user.id),
                    ('created_by_agent_id', '=', user.partner_id.id)
            ]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Regola per limitare la modifica degli ordini in stato non bozza -->
        <record id="portal_agent_order_draft_rule" model="ir.rule">
            <field name="name">Portal Agent: Edit Only Draft Orders</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="domain_force">[
                ('state', 'in', ['draft', 'sent'])
            ]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Regola per le righe ordine: gli agenti possono creare/modificare righe -->
        <record id="portal_agent_order_line_rule" model="ir.rule">
            <field name="name">Portal Agent: Manage Order Lines</field>
            <field name="model_id" ref="sale.model_sale_order_line"/>
            <field name="domain_force">[
                '|',
                    ('order_id.partner_id.user_id', '=', user.id),
                    ('order_id.created_by_agent_id', '=', user.partner_id.id)
            ]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Regola per i prodotti: gli agenti possono vedere i prodotti pubblicati -->
        <record id="portal_agent_product_rule" model="ir.rule">
            <field name="name">Portal Agent: See Published Products</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="domain_force">[
                ('website_published', '=', True)
            ]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="portal_agent_product_product_rule" model="ir.rule">
            <field name="name">Portal Agent: See Published Product Variants</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="domain_force">[
                ('website_published', '=', True)
            ]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</odoo>
