<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Wizard Form View -->
    <record id="view_voucher_create_invoice_wizard_form" model="ir.ui.view">
        <field name="name">voucher.create.invoice.wizard.form</field>
        <field name="model">voucher.create.invoice.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Invoice from Voucher">
                <group>
                    <group>
                        <field name="voucher_id" readonly="1"/>
                        <field name="partner_id" 
                               options="{'no_create': True}"/>
                    </group>
                    <group>
                        <field name="include_voucher_ref"/>
                        <field name="merge_same_product"/>
                    </group>
                </group>
                
                <notebook>
                    <page string="Lines to Invoice">
                        <field name="line_ids">
                            <list editable="bottom" create="0" delete="0">
                                <field name="to_invoice" widget="boolean_toggle"/>
                                <field name="product_id" readonly="1"/>
                                <field name="product_categ_id" readonly="1"/>
                                <field name="name" readonly="1" optional="show"/>
                                <field name="quantity" readonly="1"/>
                                <field name="qty_invoiced" readonly="1"/>
                                <field name="qty_to_invoice" readonly="1"/>
                                <field name="qty_invoice_now" 
                                       required="to_invoice"
                                       readonly="not to_invoice"/>
                                <field name="product_uom_id" readonly="1"/>
                                <field name="price_unit" readonly="1" optional="show"/>
                                <field name="voucher_line_id" column_invisible="1"/>
                                <field name="sequence" column_invisible="1"/>
                            </list>
                        </field>
                        <div class="alert alert-info" role="alert" invisible="has_lines_to_invoice">
                            <strong>No lines to invoice!</strong> All lines have been fully invoiced.
                        </div>
                    </page>
                </notebook>
                
                <footer>
                    <button string="Create Invoice" 
                            name="action_create_invoice" 
                            type="object" 
                            class="btn-primary"
                            invisible="not has_lines_to_invoice"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
                <field name="has_lines_to_invoice" invisible="1"/>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_voucher_create_invoice_wizard" model="ir.actions.act_window">
        <field name="name">Create Invoice</field>
        <field name="res_model">voucher.create.invoice.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_sale_voucher"/>
        <field name="binding_view_types">form</field>
    </record>

</odoo>

