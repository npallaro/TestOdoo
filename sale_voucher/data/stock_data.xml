<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Virtual Location for Voucher Customers -->
        <record id="stock_location_voucher_customers" model="stock.location">
            <field name="name">Voucher Customers</field>
            <field name="usage">customer</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="comment">Virtual location for goods delivered via vouchers (not yet invoiced)</field>
        </record>

        <!-- Picking Type for Voucher Deliveries -->
        <record id="picking_type_voucher_out" model="stock.picking.type">
            <field name="name">Voucher Delivery</field>
            <field name="code">outgoing</field>
            <field name="sequence_code">VOUT</field>
            <field name="warehouse_id" ref="stock.warehouse0"/>
            <field name="default_location_src_id" ref="stock.stock_location_stock"/>
            <field name="default_location_dest_id" ref="stock_location_voucher_customers"/>
            <field name="sequence">100</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="show_operations">False</field>
            <field name="show_reserved">True</field>
        </record>

        <!-- Sequence for Voucher Picking -->
        <record id="sequence_voucher_picking" model="ir.sequence">
            <field name="name">Voucher Delivery Sequence</field>
            <field name="code">VOUT</field>
            <field name="prefix">VOUT/</field>
            <field name="padding">5</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
            <field name="implementation">standard</field>
            <field name="company_id" ref="base.main_company"/>
        </record>

        <!-- Link sequence to picking type -->
        <record id="picking_type_voucher_out" model="stock.picking.type">
            <field name="sequence_id" ref="sequence_voucher_picking"/>
        </record>

    </data>
</odoo>

