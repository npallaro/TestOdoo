<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- List View for Lines to Invoice -->
    <record id="view_sale_voucher_line_to_invoice_list" model="ir.ui.view">
        <field name="name">sale.voucher.line.to.invoice.list</field>
        <field name="model">sale.voucher.line</field>
        <field name="arch" type="xml">
            <list string="Lines to Invoice" 
                  create="0" 
                  edit="0"
                  decoration-success="qty_to_invoice > 0"
                  decoration-muted="qty_to_invoice == 0">
                <field name="voucher_id"/>
                <field name="product_id"/>
                <field name="product_categ_id" optional="show"/>
                <field name="name" optional="show"/>
                <field name="quantity"/>
                <field name="qty_invoiced"/>
                <field name="qty_to_invoice" decoration-bf="1"/>
                <field name="product_uom_id"/>
                <field name="price_unit" optional="show"/>
                <field name="price_subtotal" optional="show" sum="Total"/>
                <field name="voucher_state" optional="show"/>
                <field name="currency_id" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Search View for Lines to Invoice -->
    <record id="view_sale_voucher_line_to_invoice_search" model="ir.ui.view">
        <field name="name">sale.voucher.line.to.invoice.search</field>
        <field name="model">sale.voucher.line</field>
        <field name="arch" type="xml">
            <search string="Lines to Invoice">
                <field name="voucher_id"/>
                <field name="product_id"/>
                <field name="product_categ_id"/>
                <field name="name"/>
                
                <filter string="To Invoice" name="to_invoice" 
                        domain="[('qty_to_invoice', '>', 0), ('voucher_state', '=', 'delivered')]"/>
                <filter string="Partially Invoiced" name="partially_invoiced" 
                        domain="[('qty_invoiced', '>', 0), ('qty_to_invoice', '>', 0)]"/>
                <filter string="Fully Invoiced" name="fully_invoiced" 
                        domain="[('is_fully_invoiced', '=', True)]"/>
                
                <separator/>
                
                <filter string="Delivered Vouchers" name="delivered" 
                        domain="[('voucher_state', '=', 'delivered')]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Voucher" name="group_voucher" context="{'group_by': 'voucher_id'}"/>
                    <filter string="Product" name="group_product" context="{'group_by': 'product_id'}"/>
                    <filter string="Category" name="group_category" context="{'group_by': 'product_categ_id'}"/>
                    <filter string="Voucher Status" name="group_state" context="{'group_by': 'voucher_state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Form View for Line Details -->
    <record id="view_sale_voucher_line_form" model="ir.ui.view">
        <field name="name">sale.voucher.line.form</field>
        <field name="model">sale.voucher.line</field>
        <field name="arch" type="xml">
            <form string="Voucher Line" create="0" edit="0">
                <sheet>
                    <group>
                        <group>
                            <field name="voucher_id"/>
                            <field name="voucher_state"/>
                            <field name="product_id"/>
                            <field name="product_categ_id"/>
                        </group>
                        <group>
                            <field name="quantity"/>
                            <field name="qty_invoiced"/>
                            <field name="qty_to_invoice"/>
                            <field name="is_fully_invoiced"/>
                        </group>
                    </group>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <group>
                            <field name="product_uom_id"/>
                            <field name="price_unit"/>
                        </group>
                        <group>
                            <field name="price_subtotal"/>
                            <field name="price_tax"/>
                            <field name="price_total"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Lines to Invoice -->
    <record id="action_sale_voucher_lines_to_invoice" model="ir.actions.act_window">
        <field name="name">Lines to Invoice</field>
        <field name="res_model">sale.voucher.line</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('display_type', '=', False)]</field>
        <field name="context">{
            'search_default_to_invoice': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No lines to invoice
            </p>
            <p>
                This view shows all product lines from delivered vouchers that can be invoiced.
                Select the lines you want to invoice and use the "Action" menu to create an invoice.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_sale_voucher_lines_to_invoice"
              name="Lines to Invoice"
              parent="menu_sale_voucher_root"
              action="action_sale_voucher_lines_to_invoice"
              sequence="15"/>

</odoo>

