<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- List View -->
    <record id="view_sale_voucher_tree" model="ir.ui.view">
        <field name="name">sale.voucher.list</field>
        <field name="model">sale.voucher</field>
        <field name="arch" type="xml">
            <list string="Sales Vouchers" 
                  decoration-info="state=='draft'" 
                  decoration-muted="state=='cancelled'"
                  decoration-success="state=='delivered'">
                <field name="name"/>
                <field name="date"/>
                <field name="recipient_id"/>
                <field name="user_id" optional="show" widget="many2one_avatar_user"/>
                <field name="amount_untaxed" sum="Total Untaxed" optional="show"/>
                <field name="amount_tax" sum="Total Tax" optional="hide"/>
                <field name="amount_total" sum="Total" decoration-bf="1"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="state" widget="badge" 
                       decoration-info="state=='draft'" 
                       decoration-warning="state in ('confirmed','delivered')"
                       decoration-success="state=='invoiced'"
                       decoration-muted="state=='cancelled'"/>
                <field name="invoiced_to_id" optional="show"/>
                <field name="company_id" groups="base.group_multi_company" optional="show"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_sale_voucher_form" model="ir.ui.view">
        <field name="name">sale.voucher.form</field>
        <field name="model">sale.voucher</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Sales Voucher">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" 
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            invisible="state in ('invoiced', 'cancelled')"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,delivered,invoiced"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="recipient_id" 
                                   readonly="state in ('invoiced', 'cancelled')"/>
                            <field name="date" readonly="state in ('invoiced', 'cancelled')"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Products">
                            <field name="line_ids" readonly="state in ('invoiced', 'cancelled')">
                                <list editable="bottom">
                                    <field name="product_id" required="1"/>
                                    <field name="name"/>
                                    <field name="quantity" required="1"/>
                                    <field name="product_uom_id" required="1"/>
                                    <field name="price_unit"/>
                                    <field name="tax_ids" widget="many2many_tags" optional="show"/>
                                    <field name="price_subtotal"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </list>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="amount_untaxed"/>
                                <field name="amount_tax"/>
                                <field name="amount_total" class="oe_subtotal_footer_separator"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </page>
                        <page string="Other Info">
                            <group>
                                <group string="Delivery">
                                    <field name="picking_id" readonly="1"/>
                                </group>
                                <group string="Invoice">
                                    <field name="invoice_id" readonly="1"/>
                                    <field name="invoiced_to_id" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_sale_voucher_kanban" model="ir.ui.view">
        <field name="name">sale.voucher.kanban</field>
        <field name="model">sale.voucher</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="recipient_id"/>
                <field name="amount_total"/>
                <field name="state"/>
                <field name="currency_id"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="row mb4">
                                <div class="col-6">
                                    <strong><field name="name"/></strong>
                                </div>
                                <div class="col-6 text-end">
                                    <strong><field name="amount_total" widget="monetary"/></strong>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <field name="recipient_id"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <field name="state" widget="badge"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_sale_voucher_search" model="ir.ui.view">
        <field name="name">sale.voucher.search</field>
        <field name="model">sale.voucher</field>
        <field name="arch" type="xml">
            <search string="Sales Vouchers">
                <field name="name"/>
                <field name="recipient_id"/>
                <field name="user_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Delivered" name="delivered" domain="[('state', '=', 'delivered')]"/>
                <filter string="Invoiced" name="invoiced" domain="[('state', '=', 'invoiced')]"/>
                <separator/>
                <filter string="My Vouchers" name="my_vouchers" domain="[('user_id', '=', uid)]"/>
                <group expand="0" string="Group By">
                    <filter string="Recipient" name="group_recipient" context="{'group_by': 'recipient_id'}"/>
                    <filter string="User" name="group_user" context="{'group_by': 'user_id'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_sale_voucher_pivot" model="ir.ui.view">
        <field name="name">sale.voucher.pivot</field>
        <field name="model">sale.voucher</field>
        <field name="arch" type="xml">
            <pivot string="Sales Vouchers Analysis">
                <field name="recipient_id" type="row"/>
                <field name="date" interval="month" type="col"/>
                <field name="amount_total" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="view_sale_voucher_graph" model="ir.ui.view">
        <field name="name">sale.voucher.graph</field>
        <field name="model">sale.voucher</field>
        <field name="arch" type="xml">
            <graph string="Sales Vouchers Analysis" type="bar">
                <field name="date" interval="month"/>
                <field name="amount_total" type="measure"/>
            </graph>
        </field>
    </record>

</odoo>

