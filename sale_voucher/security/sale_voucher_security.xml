<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Categories -->
        <record id="module_category_voucher" model="ir.module.category">
            <field name="name">Vouchers</field>
            <field name="description">Manage access rights for sales vouchers</field>
            <field name="sequence">10</field>
        </record>

        <!-- Groups -->
        
        <!-- User: Can create and manage own vouchers -->
        <record id="group_voucher_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_voucher"/>
            <field name="comment">Can create and manage own vouchers and team vouchers</field>
        </record>

        <!-- Manager: Full access to all vouchers including archived -->
        <record id="group_voucher_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_voucher"/>
            <field name="implied_ids" eval="[(4, ref('group_voucher_user'))]"/>
            <field name="comment">Full access to all vouchers including archived ones</field>
        </record>

        <!-- Record Rules -->
        
        <!-- User: Own vouchers and team vouchers (active only) -->
        <record id="sale_voucher_rule_user" model="ir.rule">
            <field name="name">Voucher User: Own and Team Vouchers (Active)</field>
            <field name="model_id" ref="model_sale_voucher"/>
            <field name="domain_force">[
                ('active', '=', True),
                '|',
                    ('user_id', '=', user.id),
                    ('user_id.sale_team_id', '=', user.sale_team_id.id)
            ]</field>
            <field name="groups" eval="[(4, ref('group_voucher_user'))]"/>
        </record>

        <!-- Manager: All vouchers including archived -->
        <record id="sale_voucher_rule_manager" model="ir.rule">
            <field name="name">Voucher Manager: All Vouchers (Including Archived)</field>
            <field name="model_id" ref="model_sale_voucher"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_voucher_manager'))]"/>
        </record>

        <!-- Multi-company rules -->
        <record id="sale_voucher_rule_company" model="ir.rule">
            <field name="name">Voucher: Multi-Company</field>
            <field name="model_id" ref="model_sale_voucher"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="global" eval="True"/>
        </record>

    </data>
</odoo>

