<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Categories -->
        <record id="module_category_voucher" model="ir.module.category">
            <field name="name">Sales Voucher</field>
            <field name="description">Manage access rights for sales vouchers</field>
            <field name="sequence">10</field>
        </record>

        <!-- Groups -->
        <record id="group_voucher_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_voucher"/>
            <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
            <field name="comment">Can create and view vouchers</field>
        </record>

        <record id="group_voucher_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_voucher"/>
            <field name="implied_ids" eval="[(4, ref('group_voucher_user')), (4, ref('sales_team.group_sale_salesman_all_leads'))]"/>
            <field name="comment">Can create invoices from vouchers and access all reports</field>
        </record>

        <record id="group_voucher_admin" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="module_category_voucher"/>
            <field name="implied_ids" eval="[(4, ref('group_voucher_manager')), (4, ref('sales_team.group_sale_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
            <field name="comment">Full access including deletion and configuration</field>
        </record>

        <!-- Record Rules -->
        
        <!-- Voucher User: own vouchers and team vouchers -->
        <record id="sale_voucher_rule_user" model="ir.rule">
            <field name="name">Voucher User: Own and Team Vouchers</field>
            <field name="model_id" ref="model_sale_voucher"/>
            <field name="domain_force">[
                '|',
                    ('user_id', '=', user.id),
                    ('user_id.sale_team_id', 'in', user.sale_team_ids.ids)
            ]</field>
            <field name="groups" eval="[(4, ref('group_voucher_user'))]"/>
        </record>

        <!-- Voucher Manager: all vouchers -->
        <record id="sale_voucher_rule_manager" model="ir.rule">
            <field name="name">Voucher Manager: All Vouchers</field>
            <field name="model_id" ref="model_sale_voucher"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_voucher_manager'))]"/>
        </record>

        <!-- Multi-company rules -->
        <record id="sale_voucher_rule_company" model="ir.rule">
            <field name="name">Voucher: Multi-Company</field>
            <field name="model_id" ref="model_sale_voucher"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="global" eval="True"/>
        </record>

    </data>
</odoo>

