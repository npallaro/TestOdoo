<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Product Form View to add Barcodes Tab -->
    <record id="view_product_form_inherit_multi_barcode" model="ir.ui.view">
        <field name="name">product.product.form.inherit.multi.barcode</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <!-- Add button in button box -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_barcodes"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-barcode"
                    invisible="1">
                    <field name="barcode_count" widget="statinfo" string="Barcodes"/>
                </button>
            </xpath>

            <!-- Add Barcodes page -->
            <xpath expr="//notebook" position="inside">
                <page string="Barcodes" name="barcodes">
                    <group>
                        <group>
                            <field name="barcode" placeholder="Primary Barcode"/>
                        </group>
                    </group>
                    <group string="Additional Barcodes">
                        <field name="barcode_ids" nolabel="1" context="{'default_product_id': active_id}">
                            <tree editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="name" string="Barcode"/>
                                <field name="notes"/>
                                <field name="active" widget="boolean_toggle"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Inherit Product Variant Form View (if different from normal form) -->
    <record id="view_product_variant_form_inherit_multi_barcode" model="ir.ui.view">
        <field name="name">product.product.variant.form.inherit.multi.barcode</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
        <field name="arch" type="xml">
            <!-- Add Barcodes page -->
            <xpath expr="//notebook" position="inside">
                <page string="Barcodes" name="barcodes">
                    <group>
                        <group>
                            <field name="barcode" placeholder="Primary Barcode"/>
                        </group>
                    </group>
                    <group string="Additional Barcodes">
                        <field name="barcode_ids" nolabel="1" context="{'default_product_id': active_id}">
                            <tree editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="name" string="Barcode"/>
                                <field name="notes"/>
                                <field name="active" widget="boolean_toggle"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
