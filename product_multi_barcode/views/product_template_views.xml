<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Product Template Form View to add Barcodes Tab -->
    <record id="view_product_template_form_inherit_multi_barcode" model="ir.ui.view">
        <field name="name">product.template.form.inherit.multi.barcode</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- Add button in button box -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_all_barcodes"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-barcode">
                    <field name="total_barcode_count" widget="statinfo" string="Barcodes"/>
                </button>
            </xpath>

            <!-- Add Barcodes page after Inventory page -->
            <xpath expr="//page[@name='inventory']" position="after">
                <page string="Barcodes" name="barcodes">
                    <group string="Standard Barcode" invisible="not product_variant_count == 1">
                        <field name="product_variant_count" invisible="1"/>
                        <field name="barcode" placeholder="Primary Barcode"/>
                    </group>

                    <group string="Template Barcodes" invisible="product_variant_count > 1">
                        <p class="text-muted" colspan="2">
                            Template barcodes apply to all variants of this product.
                            For products with multiple variants, it's recommended to set barcodes on individual variants.
                        </p>
                        <field name="barcode_ids" nolabel="1" context="{'default_product_tmpl_id': active_id}">
                            <tree editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="name" string="Barcode"/>
                                <field name="notes"/>
                                <field name="active" widget="boolean_toggle"/>
                            </tree>
                        </field>
                    </group>

                    <group string="Variant Barcodes" invisible="product_variant_count == 1">
                        <p class="text-muted" colspan="2">
                            This product has multiple variants. Configure barcodes on individual variant forms.
                        </p>
                        <button name="%(product.product_variant_action)d"
                            type="action"
                            string="Configure Variant Barcodes"
                            class="btn-primary"
                            context="{'search_default_product_tmpl_id': active_id}"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
