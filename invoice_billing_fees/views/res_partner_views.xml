<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vista form partner: aggiunta campo Spese di Fatturazione -->
        <record id="view_partner_form_billing_fee" model="ir.ui.view">
            <field name="name">res.partner.form.billing.fee</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='sales_purchases']" position="inside">
                    <group name="billing_fees" string="Spese di Fatturazione">
                        <field name="billing_fee_amount" 
                               widget="monetary"
                               options="{'currency_field': 'currency_id'}"/>
                    </group>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>

